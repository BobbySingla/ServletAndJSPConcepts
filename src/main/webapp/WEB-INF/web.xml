<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>addServlet</servlet-name>
        <servlet-class>my_servlets.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>sqrServlet</servlet-name>
        <servlet-class>my_servlets.SquareServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sqrServlet</servlet-name>
        <url-pattern>/sqr</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>myServlet</servlet-name>
        <servlet-class>my_servlets.servletConfigAndServletContext.MyServlet</servlet-class>
        <init-param>
            <param-name>name</param-name>
            <param-value>Servlet-Config Name</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>myServlet</servlet-name>
        <url-pattern>/myPath</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>name</param-name>
        <param-value>Servlet-Context Name</param-value>
    </context-param>


</web-app>
